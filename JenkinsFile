pipeline{
    agent any
    stages{
        stage('Build'){
            steps{
                echo "Building..."

            }
        }

        stage('Unit and Integration Tests'){
            steps{
                echo "Testing..."
            }

            post{
                always{
                    echo "Unit and Integration Testing Successful"
                    emailext(
                        to: "nima.mafi92@gmail.com",
                        subject: "Test Status",
                        body: "Test was Successful!",
                        attachLog: true
                    )   
                }
            }
        }

        stage('Code Analysis'){
            steps{
                echo "Analysing code..."
            }
        }

        stage('Security Scan'){
            steps{
                echo "Performing Security Scan..."

            }

            post{
                always{
                    echo "Security Scan Status: ${currentBuild.currentResult}"
                    emailext(
                        to: "nima.mafi92@gmail.com",
                        subject: "Security Scan Status for ${currentBuild.fullDisplayName}",
                        body: "Security Scan was ${currentBuild.currentResult}ful!",
                        attachLog: true
                    )
                    
                }
            }
        }

        stage('Integration Tests on Staging'){
            steps{
                echo "Integration Testing in Staging Environment..."

            }
        }

        stage('Deploy to Production'){
            steps{
                echo "Deploying to Production Environment..."

            }
        }

    }
}
